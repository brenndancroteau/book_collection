<%= link_to('Back to Homepage', {controller: 'main', action: 'index'}) %><br />
<br />
<% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
<% end %>

<div class="books index">
  <h2>Books</h2>

  <%= link_to("Add New Book", new_book_path, class: 'action new') %>

  <table class="listing" summary="Book list" style="width: 100%;">
    <tr class="header">
      <th>#</th>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Publish Date</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.price %></td>
      <td><%= book.published %></td>
      <td class="actions">
        <%= link_to("Show", book_path(book), class: 'action show') %>
        <%= link_to("Update", edit_book_path(book), class: 'action update') %>
        <%= link_to("Delete", book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class: 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
